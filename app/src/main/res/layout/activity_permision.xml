<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.tutor.finder1.PermisionActivity">

    <ViewFlipper
        android:id="@+id/my_flipper"
        android:layout_width="252dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/jajja"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="Learn Today....Succeed Tomorrow"
        android:layout_below="@+id/my_flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ggggg"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:text="Tutor Finder"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/jajja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/ghghghg"
        android:id="@+id/relative_midle_section"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00E5FF"
        >
        <RelativeLayout
            android:id="@+id/hhhhhh"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_spinner">
            <Spinner
                android:id="@+id/spin_log"
                android:entries="@array/login"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                />
        </RelativeLayout>
        <EditText
            android:layout_below="@+id/hhhhhh"
            android:inputType="textEmailAddress"
            android:id="@+id/email_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/home_edittext"
            android:hint="Phone"
            android:paddingLeft="18dp"
            android:textColorHint="@color/field"
            android:textSize="18dp" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email_phone"
            android:inputType="textEmailAddress"
            android:id="@+id/email_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/home_edittext"
            android:hint="Email"
            android:paddingLeft="18dp"
            android:textColorHint="@color/field"
            android:textSize="18dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/password_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_home"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_edittext"
            android:hint="Password"
            android:paddingLeft="18dp"
            android:textColorHint="@color/field"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/password_home"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_for_home"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button_home"
            android:id="@+id/texxxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textview_button"
            android:onClick="showResisterlog"
            android:padding="2dp"
            android:text="Create New Account"
            android:textColor="#000000"
            android:textSize="18dp" />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ghghghg"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="Visit our app, teacher and student list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="goTeacherList"
                android:textColor="#000000"
                android:text="Teacher"
                android:layout_margin="5dp"
                android:background="@drawable/cop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="goStudentList"
                android:textColor="#000000"
                android:text="Student"
                android:layout_margin="5dp"
                android:background="@drawable/cop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>

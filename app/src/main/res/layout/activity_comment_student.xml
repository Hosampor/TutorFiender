<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rellllllll"
    android:layout_height="match_parent"
    tools:context=".commentStudent">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/asddhhhh"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/back_button"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Students All Comments" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/asddhhhh"
        android:id="@+id/recyclerview_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/comment_relll"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center"
            android:weightSum="8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout

                android:id="@+id/edit_comment"
                android:gravity="center"
                android:layout_weight="7"
                android:textColorHint="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:hintTextAppearance="@style/TextAppearance.AppCompat">
                <EditText
                    android:id="@+id/et_comment"
                    android:textColorHint="@color/white"
                    android:lines="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter public comment" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/push_comment"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_send_white_24dp"
                android:contentDescription="TODO" />
        </LinearLayout>


    </RelativeLayout>







</RelativeLayout>
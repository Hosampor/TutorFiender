<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="7dp"
        android:background="@color/white"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:weightSum="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/image_comment"
                    android:src="@drawable/nav_home_png"
                    android:layout_weight="1.25"
                    android:layout_width="0dp"
                    android:layout_height="42dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="5.75"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name_comment"
                            android:textSize="15sp"
                            android:text="Md. Taizul Islam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginStart="5dp"
                            android:textSize="15sp"
                            android:text=":"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:id="@+id/time_comment"
                            android:layout_marginStart="5dp"
                            android:textSize="15sp"
                            android:text="3 days ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/comment_comment"
                        android:textSize="15sp"
                        android:text="Tizul sirer teaching performance onek valo."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_gravity="center"
                            android:id="@+id/button_like_comment"
                            android:background="@drawable/like"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:id="@+id/like_comment"
                            android:text="@string/_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp" />

                        <ImageButton
                            android:layout_gravity="center"
                            android:layout_marginStart="40dp"
                            android:id="@+id/button_dislike_comment"
                            android:background="@drawable/dislike"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/dislike_comment"
                            android:layout_marginStart="4dp"
                            android:text="@string/_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp" />

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="7dp"
        android:background="@color/white"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_weight=".75"
                    android:layout_width="0dp"
                    android:layout_height="135dp">
                    <include layout="@layout/image_view_progressbar_joiner"/>

                </RelativeLayout>











                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.25"
                    android:orientation="vertical"
                    android:layout_marginStart="7dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_taka_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/textview111"
                            android:textColor="@color/black"
                            android:textSize="26sp" />
                        <TextView
                            android:text="Taka"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                    </LinearLayout>



                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_address_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textview111"
                        android:textSize="15sp" />

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/tv_description_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textview111"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_bed_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/textview111"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_weight="1"
                            android:text="@string/textview111"
                            android:id="@+id/tv_bath_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />
                        <TextView
                            android:layout_weight="1"
                            android:text="@string/textview111"
                            android:id="@+id/tv_belcony_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>





        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
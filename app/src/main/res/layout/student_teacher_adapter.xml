<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/female_adapter_card"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="7dp"
        android:background="@color/white"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:padding="5dp"
                android:layout_weight=".75"
                android:layout_width="0dp"
                android:layout_height="135dp">
                <include layout="@layout/image_view_progressbar_joiner"/>

            </RelativeLayout>





            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.25"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView

                    android:id="@+id/tv_name_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Md Taizul Islam"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_Institute_name_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daffodil International University"
                    android:textColor="@color/fff"
                    android:textSize="15sp" />



                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_class_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class 12"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat Sun Monday"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_days_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 days ago"
                    android:textColor="@color/black"
                    android:textSize="15sp" />



            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>